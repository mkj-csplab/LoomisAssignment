<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggrey"
    tools:context=".views.MainActivityJava">

    <TextView
        android:id="@+id/tvInfo1"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:text="@string/info1"
        android:textSize="48sp"
        android:layout_margin="8dp"
        android:background="@color/blued"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvInfo2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInfo2"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:text="@string/info2"
        android:textSize="48sp"
        android:layout_margin="8dp"
        android:background="@color/blued"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btStartPayProvider1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo1" />

    <Button
        android:id="@+id/btStartPayProvider1"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="12dp"
        android:shadowColor="#ffAAAAAA"
        android:text="@string/start_pay1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tvInfo2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>